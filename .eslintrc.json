{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint.json"],
  "parserOptions": {"ecmaVersion": 2020},
  "overrides": [
    {
      "files": ["*.md"],
      "rules": {
        "max-len": ["off"],
        "no-undef": ["off"],
        "no-unused-vars": ["off"]
      }
    },
    {
      "files": ["index.js"],
      "globals": {"Symbol": "readonly", "globalThis": "readonly"},
      "rules": {
        "multiline-comment-style": ["off"]
      }
    }
  ]
}
